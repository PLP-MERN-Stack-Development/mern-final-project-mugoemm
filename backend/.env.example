# Production Environment Variables
# Copy this file to .env.production and update with actual values

PORT=5000
NODE_ENV=production

# Database
MONGO_URI=your-production-mongodb-uri

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_EXPIRES_IN=7d
COOKIE_SECRET=your-super-secret-cookie-key-min-32-characters-long

# Frontend URL
FRONTEND_URL=https://your-domain.com

# Email Configuration (Production)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=Your App Name

# Alternative: SendGrid
# EMAIL_SERVICE=sendgrid
# EMAIL_USER=apikey
# EMAIL_PASS=your-sendgrid-api-key

# Logging
LOG_LEVEL=error

# Sentry (Error Tracking) - Optional
SENTRY_DSN=your-sentry-dsn

# Redis (for rate limiting in production) - Optional
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# HTTPS (if handling SSL in Node.js)
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CERT_PATH=/path/to/ssl/cert.pem